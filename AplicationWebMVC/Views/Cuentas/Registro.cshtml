@model RegistroViewModel
@{
    ViewData["Title"] = "Registro de usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title text-center">Registro de cuentas</h3>
        <form asp-controller="Cuentas" asp-action="Registro" method="post" role="form">
            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="row mt-4">
                <div class="col-sm-6">
                    
                    <div class="mb-3">
                        <label asp-for="Nombre" class="col-md-2">Nombre:</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre"/>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="col-md-2">Email:</label>
                        <input asp-for="Email" class="form-control" placeholder="Ingresa el email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Url" class="col-md-2">Url:</label>
                        <input asp-for="Url" class="form-control" placeholder="Ingresa la url" />
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CodigoPais" class="col-md-3">Codigo país:</label>
                        <input asp-for="CodigoPais" class="form-control" placeholder="Ingresa el codigo teléfonico del país" />
                        <span asp-validation-for="CodigoPais" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Telefono" class="col-md-2">Teléfono:</label>
                        <input asp-for="Telefono" class="form-control" placeholder="Ingresa el teléfono" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Pais" class="col-md-2">País:</label>
                        <input asp-for="Pais" class="form-control" placeholder="Ingresa el país" />
                        <span asp-validation-for="Pais" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-sm-6">

                    <div class="mb-3">
                        <label asp-for="Ciudad" class="col-md-2">Ciudad:</label>
                        <input asp-for="Ciudad" class="form-control" placeholder="Ingresa la ciudad" />
                        <span asp-validation-for="Ciudad" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Direccion" class="col-md-2">Dirección:</label>
                        <input asp-for="Direccion" class="form-control" placeholder="Ingresa la dirección" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="FechaNacimiento" class="col-md-4">Fecha de Nacimiento: <i class="bi bi-calendar-date"></i></label>
                        <input type="text" name="FechaNacimiento" class="form-control" id="datepicker" placeholder="Ejemplo: 1990-10-05" />
                        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="col-md-2">Contraseña:</label>
                        <input asp-for="Password" class="form-control" placeholder="Ingresa la contraseña" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="col-md-4">Confirmar contraseña:</label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirma la contraseña" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                </div>

            </div>
            <div class="row">
                <div class="col-sm-10 offset-2" >
                    <button type="submit" class="btn btn-success w-75 btn-lg">Registrarse</button>
                </div>
            </div>

        </form>
    </div>
</div>

