@model AccesoViewModel

@{
    ViewData["Title"] = "Acceso de usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h3 class="card-title text-center">Acceso de cuentas</h3>
        <form asp-controller="Cuentas" asp-action="Acceso" method="post" role="form">
            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="row mt-4">
                <div class="col-sm-6">

                    <div class="mb-3">
                        <label asp-for="Email" class="col-md-2">Email:</label>
                        <input asp-for="Email" class="form-control" placeholder="Ingresa el email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="col-md-2">Contraseña:</label>
                        <input asp-for="Password" class="form-control" placeholder="Ingresa la contraseña" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <div class="custom-check">
                            <label asp-for="RememberMe" class="col-md-4">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>

                </div>

                <div class="col-sm-4 offset-2">
                    <h3>Aquí acceso a aplicaciones externas</h3>
                </div>

            </div>

            

            <div class="row">
                <div class="col-sm-6 ">
                    <button type="submit" class="btn btn-success w-100 btn-lg">Acceder <i class="bi bi-box-arrow-in-right"></i></button>
                    <p><a asp-action="Registro">Registrarse como un nuevo usuario?</a></p>
                    <p><a asp-action="OlvidoPassword">Olvidaste tu contraseña ?</a></p>

                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}

